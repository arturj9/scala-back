generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String   @db.VarChar(50)
  email      String   @unique @db.VarChar(100)
  password   String   @db.VarChar(255)
  created_at DateTime @default(now())
  habits     Habit[]
}

model Habit {
  id           String    @id @default(uuid())
  name         String    @db.VarChar(255)
  created_at   DateTime  @default(now())
  days_of_week Int[]     @db.SmallInt
  goal_type    HabitGoalType
  goal_value   Int
  reminder_times String[] @default([])
  user         User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id      String
  checkIns     HabitCheckIn[]
  timeEntries  HabitTimeEntry[]
}

model HabitCheckIn {
  id                String   @id @default(uuid())
  checkin_timestamp DateTime @default(now())
  habit             Habit    @relation(fields: [habit_id], references: [id], onDelete: Cascade)
  habit_id          String
  @@index([habit_id, checkin_timestamp])
}

model HabitTimeEntry {
  id               String   @id @default(uuid())
  start_time       DateTime
  end_time         DateTime
  duration_minutes Int
  habit            Habit    @relation(fields: [habit_id], references: [id], onDelete: Cascade)
  habit_id         String
}

enum HabitGoalType {
  TIMES_PER_DAY   
  MINUTES_PER_DAY
}